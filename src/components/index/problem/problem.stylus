.left
    .header
        margin-bottom: 10px
        height: 32px
        .sort
            div
                float: right
                font-size: 16px
                line-height: 32px
    .problems
        .page
            margin-top: 20px
            text-align: right
.right
    .user_info
        text-align: center
        position: relative
        margin-bottom: 10px
        .detail
            h1
                color: #3f414d
                font-size: 28px
                font-weight: normal
            p
                color: #657180
                font-size: 14px
                margin: 10px 0 15px
            span
                display: block
                padding-top: 15px
                color: #657180
                font-size: 14px
                &:before
                    content: ''
                    display: block
                    width: 50px
                    height: 1px
                    margin: 0 auto
                    background: #e0e3e6
                    position: relative
                    top: -15px
                i
                    color: #3f414d;
                    font-style: normal
        .cover
            height: 100%
            width: 100%
            z-index: 1
            position: absolute
            top: 0
            left: 0
            transition: background .5s
            p
                color: #fff
                font-size: 18px
                position: absolute
                top: 50%
                left: 50%
                margin-left: -50px
                margin-top: -10px
                display: none
            &:hover
                background: rgba(0, 0, 0, .7)
                p
                    display: inline
    .tags
        .tag
            padding 3px 10px
            margin-right: 5px
            margin-bottom: 10px
            cursor: pointer
            border 1px solid #ccc
            transition: all .4s
            border-radius: 5px
            display inline-block
            &.active,&:hover
                color #333
                background-color #e6e6e6
                border-color #adadad
            .name
                color: #5a5a5a
            .number
                background: #17807d
                opacity: .85
                color: #fff
                padding: 1px 4px
                font-size: 10px
                border-radius: 3px