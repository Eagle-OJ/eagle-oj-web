.contest-li
    border-bottom: 1px solid #e9eaec
    padding: 5px 0
    position relative
    .info
        display inline-block
        .contest-name
            font-size: 20px
            color: #495060
            &:hover
                text-decoration: underline
                color: #2d8cf
        .icon
            display inline-block
            width: 60px
            i
                font-size: 50px
                color: #fc6
        .type
            margin-left: 10px
        .bottom
            color: #80848f
            font-size: 15px
            a
                font-size: 15px
                color: #80848f
            .type
                margin-left: 5px
                span
                    font-size: 12px
    .status
        position: absolute
        right 10px
        top: 13px